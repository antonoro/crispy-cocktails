<form action="/ingredients/search" method="GET">
    <div>
        <div class="form-group">
            <label class="row">
                <h2>Search Ingredient</h2>
            </label>
        </div>
        <div class="form-group">
            <label class="row">
                <div class="col-sm-2">
                    <span>Name:</span>
                </div>
                <div class="col-sm-3">
                    <input class="form_control input-sm" type="text" name="IngredientName" required>
                </div>
            </label>
        </div>

        <div class="form-group">
            <label class="row">
                <div class="col-sm-2">
                    <span>Quantity:</span>
                </div>
                <div class="col-sm-3">
             
                </div>
                <div class="col-sm-3">
                    <span>(oz.)</span>
                </div>
            </label>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Search Ingredient</button>
        </div>
    </div>
</form>
<script src="javascripts/searchIngredient.js"></script>

