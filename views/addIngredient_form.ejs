<form action="/ingredients/add" method="POST">
    <div>
        <div class="form-group">
            <label class="row">
                <h2>Add Ingredient</h2>
            </label>
        </div>
        <div class="form-group">
            <label class="row">
                <div class="col-sm-2">
                    <span>Name:</span>
                </div>
                <div class="col-sm-3">
                    <input class="form_control input-sm" type="text" name="IngredientName" required>
                </div>
            </label>
        </div>

        <div class="form-group">
            <label class="row">
                <div class="col-sm-3">
                    <span>Quantity:</span>
                </div>
                <div class="col-sm-6">
                    <input class="form_control" type="number" name="IngredientQuantity" min="0" required>
                </div>
                <div class="col-sm-3">
                    <span>(oz.)</span>
                </div>
            </label>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Add Ingredient</button>
        </div>
    </div>
</form>